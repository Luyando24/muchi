{
    "version": 2,
    "builds": [
        {
            "src": "server/serverless-build.ts",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist/spa"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/serverless-build.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}